<div class="{{inputName}}-autocomplete">
    <input
    	class="{{inputName}} js-{{inputName}}"
    	data-component="simple-autocomplete"
    	placeholder="{{inputPlaceholder}}"
    	type="search"
    	autocomplete="off"
    	value="{{initialValue}}">

    {{#hiddenFields}}
        <input type="hidden" id="{{name}}" name="{{name}}" value="{{value}}" />
    {{/hiddenFields}}
</div>